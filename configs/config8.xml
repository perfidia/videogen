<videogen>
	<configuration>
		<frame>
			<size>
				<width>640</width>
				<height>360</height>
				<sar>1.0</sar>
			</size>
			<rate>
				30
			</rate>
		</frame>
		<codecs>
			<video>
				<key>libx264</key>
				<!--key>flv1</key-->
			</video>
			<audio>
				<key>libmp3lame</key>
				<!--key>libvo_aacenc</key-->
			</audio>
		</codecs>
	</configuration>
	<sequence>
		<shot>
			<image>
				<board>
					<configuration>
						<size>
							<width>640</width>
							<height>360</height>
						</size>
						<background>
							<color>#4444DD</color>
						</background>
					</configuration>
					<text>
						<id>ijo</id>
						<content>jojo</content>
						<color>#00FFFF</color>
						<font>pilfonts/helvO24.pil</font>
						<point>
							<x>40</x>
							<y>200</y>
						</point>
					</text>
					<picture>
						<id>mijo</id>
						<align_id>ijo</align_id>
						<filename>
							../data/cc.jpg
						</filename>
						<point>
							<x>40</x>
							<y>30</y>
						</point>
						<size>
							<x>200</x>
							<y>101</y>
						</size>
						<transparent>
							0
						</transparent>
					</picture>
					
					<rectangle>
						<id>rec</id>
						<align_id>mijo</align_id>
						<point_start>
							<x>200</x>
							<y>101</y>
						</point_start>
						<point_end>
							<x>240</x>
							<y>141</y>
						</point_end>
						<color>#FF0000</color>
					</rectangle>
					
					<ellipse>
						<id>elp</id>
						<align_id>rec</align_id>
						<align>
							<x>center</x>
							<y>center</y>
						</align>
						<point_start>
							<x>0</x>
							<y>0</y>
						</point_start>
						<point_end>
							<x>40</x>
							<y>40</y>
						</point_end>
						<color>#FFFF00</color>
					</ellipse>
					
					<line>
						<id>line</id>
						<align_id>rec</align_id>
						<point_start>
							<x>0</x>
							<y>-100</y>
						</point_start>
						<point_end>
							<x>40</x>
							<y>0</y>
						</point_end>
						<width>4</width>
						<color>#FF00FF</color>
					</line>
				</board>
			</image>
			<audio>
				<generate type="SilenceGenerate">
					<unit>s</unit>
					<duration>10</duration>
				</generate>
			</audio>
		</shot>
	</sequence>
</videogen>
