<videogen>
	<configuration>
		<frame>
			<size>
				<width>640</width>
				<height>360</height>
				<sar>1.0</sar>
			</size>
			<rate>
				30
			</rate>
		</frame>
		<codecs>
			<video>
				<key>libx264</key>
				<!--key>flv1</key-->
			</video>
			<audio>
				<key>libmp3lame</key>
				<!--key>libvo_aacenc</key-->
			</audio>
		</codecs>
	</configuration>
	<sequence>
		<shot>
			<video>
				<load type="AudioVideoFile">
					../data/sintel_trailer-1080p.mp4
				</load>
				<effect type="VideoRange">
					<unit>s</unit>
					<from>10</from>
					<to>20</to>
				</effect>
				<effect type="VideoRepeat">
					<times>2</times>
				</effect>
			</video>
		</shot>
		<shot>
			<image>
				<board>
					<configuration>
						<size>
							<width>640</width>
							<height>360</height>
						</size>
						<background>
							<color>#444444</color>
						</background>
					</configuration>
					<text>
						<content>ijo ijo!</content>
						<color>#00FFFF</color>
						<point>
							<x>40</x>
							<y>200</y>
						</point>
					</text>
					<picture>
						<filename>
							../data/cc.jpg
						</filename>
						<point>
							<x>40</x>
							<y>300</y>
						</point>
						<size>
							<x>200</x>
							<y>101</y>
						</size>
						<transparent>
							0
						</transparent>
					</picture>
				</board>
			</image>
			<audio>
				<generate type="SilenceGenerate">
					<unit>s</unit>
					<duration>10</duration>
				</generate>
			</audio>
		</shot>
	</sequence>
</videogen>
