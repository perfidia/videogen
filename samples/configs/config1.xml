<videogen>
	<configuration>
		<frame>
			<size>
				<width>640</width>
				<height>360</height>
			</size>
			<rate>
				30
			</rate>
		</frame>
		<subtitles>../data/subtitles.srt</subtitles>
	</configuration>
	<sequence>
		<shot>
			<video>
				<load type="AudioVideoFile">
					../data/sintel_trailer-1080p.mp4
				</load>
				<effect type="VideoRange">
					<unit>s</unit>
					<from>10</from>
					<to>20</to>
				</effect>
				<effect type="VideoRepeat">
					<times>2</times>
				</effect>
			</video>
		</shot>
	</sequence>
</videogen>
